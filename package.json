{
  "name": "heartbank-web",
  "version": "0.1.0",
  "description": "Thank with HeartBank",
  "scripts": {
    "start": "node server.js",
    "monitor": "nodemon server.js",
    "deploy": "gcloud app deploy",
    "build": "rimraf dist && better-npm-run build && gulp generate-service-worker",
    "prod": "better-npm-run prod",
    "lint": "eslint .",
    "validate": "npm ls",
    "test": "npm run lint"
  },
  "betterScripts": {
    "start": {
      "command": "webpack-dev-server",
      "env": {
        "NODE_ENV": "development"
      }
    },
    "build": {
      "command": "webpack --progress --profile --colors --bail",
      "env": {
        "NODE_ENV": "production"
      }
    },
    "prod": {
      "command": "webpack-dev-server --progress --profile --colors --bail",
      "env": {
        "NODE_ENV": "production"
      }
    }
  },
  "frontend": {
    "name": "Heartbank",
    "javascripts": "./src",
    "stylesheets": "./src"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/heartbank/Web.git"
  },
  "author": "Front-end Web Developer Team",
  "license": "ISC",
  "homepage": "https://github.com/heartbank/Web.git#readme",
  "devDependencies": {
    "autoprefixer": "^6.3.6",
    "babel-cli": "^6.6.5",
    "babel-core": "^6.7.2",
    "babel-eslint": "^6.0.2",
    "babel-loader": "^6.2.4",
    "babel-plugin-transform-decorators-legacy": "^1.3.4",
    "babel-preset-es2015": "^6.9.0",
    "babel-preset-react": "^6.5.0",
    "babel-preset-survivejs-kanban": "^0.3.3",
    "better-npm-run": "0.0.9",
    "bootstrap-loader": "^1.0.10",
    "chai": "^3.5.0",
    "copy-webpack-plugin": "^3.0.1",
    "core-js": "^2.4.0",
    "css-loader": "^0.23.1",
    "ejs-loader": "^0.3.0",
    "eslint": "^3.0.1",
    "eslint-plugin-react": "^5.2.2",
    "express": "^4.14.0",
    "extract-text-webpack-plugin": "^1.0.1",
    "file-loader": "^0.9.0",
    "gulp": "^3.9.1",
    "html-webpack-plugin": "^2.15.0",
    "html-webpack-template": "^5.0.0",
    "karma": "^1.1.1",
    "karma-chai": "^0.1.0",
